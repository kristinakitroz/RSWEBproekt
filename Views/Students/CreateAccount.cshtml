@{
    ViewData["Title"] = "Create Student Account";
}

<h2>Create Student Account</h2>

<p class="text-muted">
    Student: <strong>@ViewBag.StudentName</strong>
</p>

<hr />

<form asp-action="CreateAccount" method="post">
    <input type="hidden" name="id" value="@ViewBag.StudentId" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label">Student Email</label>
        <input name="email" type="email" class="form-control" placeholder="student@rsweb.com" />
    </div>

    <button type="submit" class="btn btn-primary">Create Account</button>

    <a asp-action="Details"
       asp-route-id="@ViewBag.StudentId"
       class="btn btn-secondary ms-2">
        Back
    </a>
</form>
