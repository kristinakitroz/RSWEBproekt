@model IEnumerable<RSWEBproekt.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<h1>Enrollments</h1>

<div class="d-flex align-items-center gap-2 mb-3">
    <a asp-action="Create" class="btn btn-primary">
        Create New
    </a>

    <a asp-action="DeactivateSelect" class="btn btn-danger">
        Deactivate (Unenroll)
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Status</th>
            <th>Grade</th>
            <th>Enrolled On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student?.FirstName</td>
                <td>@item.Course?.Title</td>
                <td>@item.Year</td>
                <td>@item.Semester</td>
                <td>@(item.EndDate == null ? "Active" : "Inactive")</td>
                <td>@(item.Grade.HasValue? item.Grade.ToString() : "—")</td>
                <td>@item.EnrolledOn?.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (item.EndDate == null)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <span> | </span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
